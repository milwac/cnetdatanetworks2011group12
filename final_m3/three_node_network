// A (cheaper, lossy) connection to SLS is added.

compile = "milestone3.c network_layer.c routing.c"

#include "saarland.map"
#include "linktypes.txt"

messagerate = 1ms

host SB {
	x = 45388, y = 44424
	address = 134
	
	wan to HOM { 
		bandwidth = 512Kbps
		propagationdelay = 3450usecs
	}
	wan to SLS { 
		bandwidth = 1Mbps
		propagationdelay = 3450usecs
	}
}

host HOM {
	x = 68544, y = 35424
	address = 96

	wan to SB { 
		bandwidth = 512Kbps
		propagationdelay = 3450usecs
	}
}

host SLS {
	x = 29088, y = 34848
	address = 182

	wan to SB { 
		bandwidth = 1Mbps
		propagationdelay = 3450usecs
	}
}
